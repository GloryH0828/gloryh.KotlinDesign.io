<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Admin.AdminEditPwdActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout50" android:layout_marginTop="100dp">
        <TextView
                android:text="旧密码："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView391_a" tools:ignore="MissingConstraints"
                android:textSize="20sp" android:textColor="#000000"
        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/edit_admin_old_pwd"
                android:hint="请输入旧密码" android:textSize="18sp"/>
    </LinearLayout>
    <TextView
            android:text="新密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView39" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintEnd_toStartOf="@+id/edit_admin_new_pwd"
            app:layout_constraintTop_toTopOf="@+id/edit_admin_new_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/edit_admin_new_pwd"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_admin_new_pwd"
            android:hint="请输入新密码" app:layout_constraintEnd_toEndOf="@+id/linearLayout50"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout50" android:layout_marginTop="40dp"/>
    <TextView
            android:text="密码验证："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView55" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintEnd_toStartOf="@+id/edit_admin_new_pwd_again"
            app:layout_constraintTop_toTopOf="@+id/edit_admin_new_pwd_again"
            app:layout_constraintBottom_toBottomOf="@+id/edit_admin_new_pwd_again"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_admin_new_pwd_again"
            android:hint="再次输入新密码" app:layout_constraintEnd_toEndOf="@+id/edit_admin_new_pwd"
            app:layout_constraintTop_toBottomOf="@+id/edit_admin_new_pwd" android:layout_marginTop="40dp"/>
    <Button
            android:text="确认修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_admin_pwd_submit"
            android:background="#2196F3" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>