<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragment.Student.StudentManagerFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="396dp"
                android:layout_height="564dp" android:id="@+id/performance_list"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_horizontal"

                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.497" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginBottom="7dp"
                android:textColor="#000000"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="277dp"
                android:layout_height="39dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/performance_list" android:layout_marginBottom="60dp"
                android:id="@+id/linearLayout2" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="82dp">
            <TextView
                    android:text="请选择学期："
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:textSize="20sp"/>
            <TextView
                    android:layout_width="wrap_content"

                    android:textSize="20sp"
                    android:layout_height="match_parent" android:id="@+id/tv_spinner" android:textColor="#000000"
            />
            <Spinner

                    android:layout_width="35dp"
                    android:gravity="left|center"
                    android:spinnerMode="dialog"
                    android:layout_height="wrap_content" android:id="@+id/stu_spinner"
                    tools:layout_editor_absoluteY="79dp"
                    tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
            >

            </Spinner>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>