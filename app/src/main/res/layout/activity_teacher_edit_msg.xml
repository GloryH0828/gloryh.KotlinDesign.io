<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Teacher.TeacherEditMsgActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout52" android:layout_marginTop="100dp">
        <TextView
                android:text="姓名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView61" android:textSize="20sp"
                android:textColor="#000000"
        />
        <EditText
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/et_tea_edit_msg_name" android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView
            android:text="工号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView63" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="@+id/linearLayout52"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout52" android:layout_marginTop="40dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tea_edit_msg_username" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintStart_toEndOf="@+id/textView63"
            app:layout_constraintTop_toTopOf="@+id/textView63"
            app:layout_constraintBottom_toBottomOf="@+id/textView63"
            android:layout_marginLeft="20dp"/>
    <TextView
            android:text="部门："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView68" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="@+id/textView63"
            app:layout_constraintTop_toBottomOf="@+id/textView63" android:layout_marginTop="40dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tea_edit_msg_depart" android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/textView68"
            app:layout_constraintBottom_toBottomOf="@+id/textView68"
            app:layout_constraintStart_toStartOf="@+id/tv_tea_edit_msg_username"/>
    <TextView
            android:text="课程："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView70" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="@+id/textView68"
            app:layout_constraintTop_toBottomOf="@+id/textView68" android:layout_marginTop="40dp"/>
    <TextView
            android:text="计科172-语文"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tea_edit_msg_course" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintTop_toTopOf="@+id/textView70"
            app:layout_constraintStart_toStartOf="@+id/tv_tea_edit_msg_depart"
    />
    <Button
            android:text="确认修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_tea_edit_msg_submit" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" android:background="#3F51B5" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>