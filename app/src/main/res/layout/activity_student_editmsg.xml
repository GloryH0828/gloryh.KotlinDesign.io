<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Student.StudentEditmsgActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" android:id="@+id/linearLayout51">
        <TextView
                android:text="姓名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView59" android:textSize="20sp"
                android:textColor="#000000"
        />
        <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/et_stu_name"
                android:textSize="20sp" android:hint="姓名不得为空" android:gravity="center"/>
    </LinearLayout>
    <TextView
            android:text="学号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView62" android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/linearLayout51"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout51" android:layout_marginTop="40dp"/>
    <TextView
            android:text="201701014238"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_stu_username" android:textSize="20sp"
            android:textColor="#000000" android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/textView62"
            app:layout_constraintBottom_toBottomOf="@+id/textView62"
            app:layout_constraintStart_toEndOf="@+id/textView62"/>
    <TextView
            android:text="性别："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView64" android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/et_stu_username"
            app:layout_constraintStart_toStartOf="@+id/textView62" android:layout_marginTop="40dp"/>
    <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rg_stu_sex"
            app:layout_constraintStart_toEndOf="@+id/textView64"
            app:layout_constraintBottom_toBottomOf="@+id/textView64" app:layout_constraintTop_toTopOf="@+id/textView64">
        <RadioButton
                android:text="男"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_stu_male" android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"/>
        <RadioButton
                android:text="女"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rb_stu_female"/>
    </RadioGroup>
    <Button
            android:text="确认修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_stu_msg_submit" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#3F51B5" android:textSize="20sp" android:layout_marginBottom="100dp"/>
    <TextView
            android:text="专业："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView65" android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/textView64"
            app:layout_constraintTop_toBottomOf="@+id/rg_stu_sex" android:layout_marginTop="40dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_stu_speciality" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="@+id/rg_stu_sex"
            app:layout_constraintEnd_toEndOf="@+id/rg_stu_sex" app:layout_constraintTop_toTopOf="@+id/textView65"
            app:layout_constraintBottom_toBottomOf="@+id/textView65"/>
    <TextView
            android:text="班级："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView67" android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/textView65"
            app:layout_constraintTop_toBottomOf="@+id/textView65" android:layout_marginTop="40dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_stu_class" android:textSize="20sp"
            android:textColor="#000000" app:layout_constraintStart_toStartOf="@+id/tv_stu_speciality"
            app:layout_constraintEnd_toEndOf="@+id/tv_stu_speciality" app:layout_constraintTop_toTopOf="@+id/textView67"
            app:layout_constraintBottom_toBottomOf="@+id/textView67"/>
</androidx.constraintlayout.widget.ConstraintLayout>