<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Admin.SearchPerformanceActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout36" android:layout_marginTop="100dp">
        <TextView
                android:text="学期："
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/textView21" android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/sea_cou_semester" android:textSize="20sp"
                android:textColor="#2196F3"
                android:gravity="center"/>
        <Spinner
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner6"
        />
        <EditText
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/sea_cou_index"
                android:textSize="20sp" android:textColor="#000000" android:hint="请输入学号" android:gravity="center"
        />
        <Button
                android:text="搜索"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_sea_course" android:textSize="20sp"
                android:textColor="#000000" android:background="#673AB7"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sea_per_layout" app:layout_constraintStart_toStartOf="@+id/linearLayout36"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout36"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout36" android:layout_marginTop="40dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout37" android:gravity="center" android:layout_gravity="center">
            <TextView
                    android:text="姓名："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView36" android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sea_cou_name" android:textSize="20sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout38" android:layout_marginTop="40dp" android:gravity="center"
                android:layout_gravity="center">
            <TextView
                    android:text="学号："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView46" android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sea_cou_username" android:textSize="20sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout39" android:layout_marginTop="40dp" android:gravity="center"
                android:layout_gravity="center">
            <TextView
                    android:text="班级："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView49" android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sea_cou_class" android:textSize="20sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout40" android:layout_marginTop="40dp" android:gravity="center"
                android:layout_gravity="center">
            <TextView
                    android:text="课程："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView50" android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sea_cou_course" android:textSize="20sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout41" android:layout_marginTop="40dp" android:gravity="center"
                android:layout_gravity="center">
            <TextView
                    android:text="分数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView52" android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginRight="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sea_cou_number" android:textSize="20sp"
                    android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp" android:gravity="center"
                android:layout_gravity="center">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/bt_previous"
                    android:id="@+id/sea_cou_previous"
                    android:clickable="true" android:contentDescription="TODO" android:focusable="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/sea_cou_count" android:textSize="20sp"
                    android:textColor="#000000" android:gravity="center" android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/bt_next"
                    android:id="@+id/sea_cou_next"
                    android:clickable="true" android:contentDescription="TODO" android:focusable="true"/>
        </LinearLayout>
        <Button
                android:text="成绩修改"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_sea_cou_edit" android:textSize="20sp" android:textColor="#000000"
                android:background="#2196F3" android:layout_gravity="center" android:layout_marginTop="40dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>