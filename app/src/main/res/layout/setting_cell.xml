<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/edit_msg"
            android:id="@+id/iv_edit_msg"
            app:layout_constraintBottom_toTopOf="@+id/iv_login_out"
            android:layout_marginBottom="300dp" app:layout_constraintStart_toStartOf="@+id/iv_login_out"
            app:layout_constraintEnd_toEndOf="@+id/iv_login_out" app:layout_constraintHorizontal_bias="0.0"
            android:contentDescription="TODO"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/edit_pwd"
            android:id="@+id/iv_edit_pwd"
            app:layout_constraintStart_toEndOf="@+id/iv_login_out"
            android:layout_marginLeft="60dp" app:layout_constraintTop_toTopOf="@+id/iv_edit_msg"
            app:layout_constraintBottom_toBottomOf="@+id/iv_login_out" android:contentDescription="TODO"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp" app:srcCompat="@drawable/login_out"
            android:id="@+id/iv_login_out"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="78dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="TODO"/>
    <TextView
            android:text="修改个人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_msg" app:layout_constraintStart_toEndOf="@+id/iv_edit_msg"
            app:layout_constraintTop_toTopOf="@+id/iv_edit_msg"
            app:layout_constraintBottom_toBottomOf="@+id/iv_edit_msg"
            android:textSize="24sp" android:textColor="#000000" android:textAllCaps="true"/>
    <TextView
            android:text="修改个人密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_pwd" app:layout_constraintEnd_toStartOf="@+id/iv_edit_pwd"
            android:textSize="24sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/iv_edit_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/iv_edit_pwd"/>
    <TextView
            android:text="退出账号登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_login_out"
            app:layout_constraintTop_toTopOf="@+id/iv_login_out"
            app:layout_constraintBottom_toBottomOf="@+id/iv_login_out" android:textSize="24sp"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@+id/iv_login_out"/>
</androidx.constraintlayout.widget.ConstraintLayout>
