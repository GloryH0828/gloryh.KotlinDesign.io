<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Admin.AddTeacherActivity" android:layout_marginTop="120dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout18" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20" android:textSize="20sp"
                android:textColor="#000000"
                android:text="部门："/>
        <TextView
                android:text="TextView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/teadepart_list" android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"/>
        <Spinner
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner4"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout18"
            app:layout_constraintStart_toStartOf="@+id/linearLayout18"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout18" android:id="@+id/linearLayout19"
            android:layout_marginTop="30dp">
        <TextView
                android:text="班级："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView27" android:textSize="20sp"
                android:textColor="#000000"
        />
        <TextView
                android:text="TextView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/tea_classlist" android:textSize="20sp"
                android:textColor="#000000"
                android:gravity="center"/>
        <Spinner
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner5"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout17" app:layout_constraintTop_toBottomOf="@+id/linearLayout19"
            app:layout_constraintStart_toStartOf="@+id/linearLayout19"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout19" android:layout_marginTop="30dp">
        <TextView
                android:text="工号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29" android:textSize="20sp"
                android:textColor="#000000"
        />
        <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edit_tea_username"
                android:textSize="20sp" android:textColor="#000000" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout16"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout17"
            app:layout_constraintStart_toStartOf="@+id/linearLayout17"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout17" android:layout_marginTop="30dp">
        <TextView
                android:text="姓名："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30" android:textSize="20sp"
                android:textColor="#000000"
        />
        <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_tea_name"
                android:hint="请输入教师姓名" android:textSize="20sp" android:textColor="#000000" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout16"
            app:layout_constraintStart_toStartOf="@+id/linearLayout16" android:id="@+id/linearLayout20"
            android:layout_marginTop="30dp">
        <TextView
                android:text="科目："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView31" android:textSize="20sp"
                android:textColor="#000000"
        />
        <EditText
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_tea_course"
                android:hint="请输入科目" android:textSize="20sp" android:textColor="#000000" android:gravity="center"/>
    </LinearLayout>
    <Button
            android:text="确认添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_add_tea" android:textSize="20sp"
            android:background="#00BCD4" app:layout_constraintTop_toBottomOf="@+id/linearLayout20"
            app:layout_constraintStart_toStartOf="@+id/linearLayout20"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout20" android:layout_marginTop="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>